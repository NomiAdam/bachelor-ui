{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": "airbnb",
  "parser": "babel-eslint",
  "rules": {
    "max-len": [
      1,
      120,
      2
    ],
    // indentation
    "indent": [
      2,
      4
    ],
    // spacing
    "space-in-parens": [
      0,
      "always"
    ],
    "template-curly-spacing": [
      2,
      "always"
    ],
    "array-bracket-spacing": [
      0,
      "always"
    ],
    "object-curly-spacing": [
      2,
      "always"
    ],
    "computed-property-spacing": [
      2,
      "always"
    ],
    "no-multiple-empty-lines": [
      2,
      {
        "max": 1,
        "maxEOF": 0,
        "maxBOF": 0
      }
    ],
    // strings
    "quotes": [
      2,
      "single",
      "avoid-escape"
    ],
    // code arrangement matter
    "no-use-before-define": [
      2,
      {
        "functions": false
      }
    ],
    // make it meaningful
    "prefer-const": 1,
    // keep it simple
    "complexity": [
      1,
      5
    ],
    // react
    "react/prop-types": 0,
    "react/forbid-prop-types": 0,
    "react/prefer-es6-class": 0,
    "react/jsx-filename-extension": 0,
    "react/jsx-curly-spacing": [
      2,
      "always"
    ],
    "react/jsx-indent": [
      2,
      4
    ],
    "react/jsx-indent-props": [
      16
    ],
    "no-tabs": 1,
    "react/require-default-props": [0, { "forbidDefaultForRequired": false }],
    "react/no-unused-prop-types": [0, { "skipShapeProps": true }]
  }
}
